<UserControl x:Class="FlatShareCostCalculator.UpdateCostsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlatShareCostCalculator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel x:Name="MainStackPanel">
            <Button x:Name="BTN_add_cost_update"
                    Click="BTN_add_cost_update_Click"
                    Content="add cost update">
            </Button>
            <TabControl x:Name="MainTabControl"
                    TabStripPlacement="Left"
                    >
            </TabControl>
            <Button x:Name="BTN_remove_active_cost_update"
                    Click="BTN_remove_active_cost_update_Click"
                    Content="remove active cost update"
                    Visibility="Hidden">
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>
