<UserControl x:Class="WPF_CustomControls.FanUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CustomControls"
             mc:Ignorable="d" >
    <StackPanel Background="White">
        <local:FanCustomControl HorizontalAlignment="Center" Margin="0 0 0 10"
                                FanOn="{Binding Mode=TwoWay, Path=IsChecked,ElementName=switch}"/>
        <CheckBox Content="Switch" x:Name="switch"/>

    </StackPanel>
</UserControl>
