<Window x:Class="WPF_DataSavingAndLoading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DataSavingAndLoading"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#f8f9fa">
        <Button Content="Import CSV" Style="{StaticResource buttonStyle}" VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="20" Click="Button_Click"/>
        <DataGrid x:Name="CSVDataGrid" Margin="20 70 20 20" Background="White" />
    </Grid>
</Window>
