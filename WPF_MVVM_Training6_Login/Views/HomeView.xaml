<UserControl x:Class="WPF_MVVM_Training6_Login.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MVVM_Training6_Login.Views"
             xmlns:components="clr-namespace:WPF_MVVM_Training6_Login.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBlock Text="Home"
                   HorizontalAlignment="Center"
                   FontSize="36"
                   Grid.Row="0"
                   />
            <Button Command="{Binding LoginCommand}"                
                Grid.Row="1"
                Background="Transparent">
                <TextBlock Text="Login"
                       Foreground="Red"
                       Background="Transparent"
                       FontSize="24"
                       FontWeight="Bold"
                       TextDecorations="Baseline"/>
            </Button>
     
    </Grid>
</UserControl>
